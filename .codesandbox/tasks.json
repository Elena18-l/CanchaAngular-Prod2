{
  "setupTasks": [
    {
      "command": "rm -rf node_modules package-lock.json",
      "name": "Limpiar node_modules"
    },
    {
      "command": "npm install -g @angular/cli",
      "name": "Instalar Angular CLI global"
    },
    {
      "command": "npm install",
      "name": "Instalar dependencias"
    }
  ],
  "tasks": {
    "ng": {
      "name": "ng",
      "command": "npm run ng"
    },
    "start": {
      "name": "start",
      "command": "npm run start",
      "runAtStart": true
    },
    "build": {
      "name": "build",
      "command": "npm run build"
    },
    "watch": {
      "name": "watch",
      "command": "npm run watch"
    },
    "test": {
      "name": "test",
      "command": "npm run test"
    }
  }
}
